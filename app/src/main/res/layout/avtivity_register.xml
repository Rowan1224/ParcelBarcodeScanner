<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">
            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textSize="26sp"
                android:textColor="#000"
                android:textStyle="italic"/>
            <EditText
                android:id="@+id/regEdit1"
                android:layout_below="@+id/txt1"
                android:layout_width="326dp"
                android:layout_height="52dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:hint="Name"
                android:textSize="20sp"
                android:textColor="#000"
                android:gravity="center"
                android:background="@drawable/style_reg_edit"/>
            <EditText
                android:id="@+id/regEdit2"
                android:layout_below="@+id/regEdit1"
                android:layout_width="326dp"
                android:layout_height="52dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:hint="Phone"
                android:textColor="#000"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/style_reg_edit"/>
            <EditText
                android:id="@+id/regEdit3"
                android:layout_below="@+id/regEdit2"
                android:layout_width="326dp"
                android:layout_height="52dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:hint="Address"
                android:textColor="#000"
                android:inputType="textPassword"
                android:gravity="center"
                android:background="@drawable/style_reg_edit"/>

            <EditText
                android:id="@+id/regEdit4"
                android:layout_below="@+id/regEdit3"
                android:layout_width="326dp"
                android:layout_height="52dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:hint="Password"
                android:textColor="#000"
                android:inputType="textPassword"
                android:gravity="center"
                android:background="@drawable/style_reg_edit"/>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_below="@+id/regEdit4"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42dp"
                android:text="Submit"
                android:textColor="#181818"
                android:textSize="18sp"
                android:background="@drawable/reg_button"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>