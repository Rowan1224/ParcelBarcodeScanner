<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:id="@+id/txt1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Parcel Request"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textSize="28sp"
                android:fontFamily="casual"
                android:textStyle="italic"/>
            <EditText
                android:id="@+id/regEdit1"
                android:layout_below="@+id/txt1"
                android:layout_width="326dp"
                android:layout_height="52dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:hint="Receiver Phone"
                android:inputType="number"
                android:textSize="20sp"
                android:textColor="#000"
                android:gravity="center"
                android:background="@drawable/reg_edit_style"/>
            <EditText
                android:id="@+id/regEdit2"
                android:layout_below="@+id/regEdit1"
                android:layout_width="326dp"
                android:layout_height="52dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:hint="Receiver Name"
                android:textColor="#000"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/reg_edit_style"/>
            <EditText
                android:id="@+id/regEdit3"
                android:layout_below="@+id/regEdit2"
                android:layout_width="326dp"
                android:layout_height="52dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:hint="Address"
                android:textColor="#000"
                android:gravity="center"
                android:background="@drawable/reg_edit_style"/>




            <Button
                android:id="@+id/btnSubmit"
                android:layout_below="@+id/regEdit3"
                android:layout_width="200dp"
                android:layout_height="46dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42dp"
                android:text="Next"
                android:textColor="#000"
                android:textSize="14sp"
                android:background="@drawable/btn_accept"/>
            <Space
                android:layout_below="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="62dp" />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
