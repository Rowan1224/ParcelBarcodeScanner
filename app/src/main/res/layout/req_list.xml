<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imgparcel"
        android:layout_width="65dp"
        android:layout_marginLeft="5dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_item"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/txtDestinationCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_toRightOf="@+id/imgparcel"
        android:text="Destination code : "
        android:textColor="@color/black"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"/>
    <TextView
        android:id="@+id/txtDescription"
        android:layout_toRightOf="@+id/imgparcel"
        android:layout_below="@+id/txtDestinationCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="2dp"
        android:padding="8dp"
        android:text="Description"/>

    <TextView
        android:id="@+id/txtIssueTime"
        android:layout_toRightOf="@+id/imgparcel"
        android:layout_below="@+id/txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="2dp"
        android:padding="8dp"
        android:text="Issued Time"/>

</RelativeLayout>