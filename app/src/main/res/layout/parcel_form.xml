<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parcel Request"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="26sp"
            android:textStyle="italic"/>


        <RelativeLayout
            android:id="@+id/regSpin1"
            android:layout_below="@+id/txt1"
            android:layout_width="326dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp">
            <Spinner
                android:id="@+id/regspin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:popupBackground="@drawable/spinner_background"
                android:overlapAnchor="false" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relSpin2"
            android:layout_below="@+id/regSpin1"
            android:layout_width="326dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp">
            <Spinner
                android:id="@+id/regspin2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:popupBackground="@drawable/spinner_background"
                android:overlapAnchor="false" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_below="@+id/relSpin2"
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:text="Send Request"
            android:textColor="#000"
            android:textSize="14sp"
            android:background="@drawable/btn_accept"/>
        <Space
            android:layout_below="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="62dp" />

    </RelativeLayout>

</ScrollView>

</RelativeLayout>