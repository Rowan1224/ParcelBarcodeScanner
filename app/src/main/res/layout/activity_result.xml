<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityback">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rel1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:background="#34495e"
            android:padding="6dp">
            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="176dp"
                android:layout_height="42dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:background="@drawable/back_scan_complete">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Scan Completed"
                    android:textSize="17sp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/txtCode"
                android:layout_below="@+id/relative1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="22sp"
                android:textStyle="italic|bold"
                android:textColor="#ffffff"
                android:layout_marginTop="16dp"/>

            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_below="@+id/txtCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="#5d6d7e"
                android:paddingTop="12dp">
                <RelativeLayout
                    android:id="@+id/r1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_centerHorizontal="true">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="86dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Name"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/k1"
                        android:layout_toEndOf="@+id/name"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text=":"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/Fname"
                        android:layout_toEndOf="@+id/k1"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/r2"
                    android:layout_below="@+id/r1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="86dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Phone"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/k2"
                        android:layout_toEndOf="@+id/phone"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text=":"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/Fphone"
                        android:layout_toEndOf="@+id/k2"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/r3"
                    android:layout_below="@+id/r2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:id="@+id/source"
                        android:layout_width="86dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Source"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/k3"
                        android:layout_toEndOf="@+id/source"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text=":"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/Fsource"
                        android:layout_toEndOf="@+id/k3"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/r4"
                    android:layout_below="@+id/r3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:id="@+id/destination"
                        android:layout_width="86dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Destination"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/k4"
                        android:layout_toEndOf="@+id/destination"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text=":"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/Fdestination"
                        android:layout_toEndOf="@+id/k4"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/r5"
                    android:layout_below="@+id/r4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp">
                    <TextView
                        android:id="@+id/address"
                        android:layout_width="86dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Address"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/k5"
                        android:layout_toEndOf="@+id/address"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text=":"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/Faddress"
                        android:layout_toEndOf="@+id/k5"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/r6"
                    android:layout_below="@+id/r5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="18dp">
                    <TextView
                        android:id="@+id/type"
                        android:layout_width="86dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Type"
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/k6"
                        android:layout_toEndOf="@+id/type"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:text=":"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/Ftype"
                        android:layout_toEndOf="@+id/k6"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </RelativeLayout>
            </RelativeLayout>
            <Button
                android:id="@+id/btnSaveData"
                android:layout_below="@+id/rel2"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="36dp"
                android:background="@drawable/btn_style"
                android:text="Add to Database"/>
            <Button
                android:id="@+id/btnScanAgain"
                android:layout_below="@+id/btnSaveData"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_style"
                android:text="scan Again"
                android:textSize="18sp"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>
